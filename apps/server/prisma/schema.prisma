// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String      @id @default(uuid())
  email     String   @unique
  name      String
  password  String
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  ownedEvents Event[]
  participateEvents Event[] @relation("participateEvents")
  hostEvents Event[] @relation("hostEvents")

  participateSlots Slot[] @relation("participateSlots")

  slots Slot[]

  invites Invites[]
  sentInvites Invites[] @relation("inviter")
 
}

enum EventStatus {
  AVAILABLE
  FULL
  ENDED
}

enum InviteRole {
  HOST
  PARTICIPATOR
}


model Invites {
  id String @id @default(uuid())
  message String
  email String
  event Event @relation(fields: [eventId], references: [id])
  eventId String
  expired Boolean @default(false)


  inviter User @relation(fields: [inviterId], references: [id],"inviter") 
  inviterId String

  user User? @relation(fields: [userId], references: [id])
  userId String?
}

model Event {
  
  
  id        String      @id @default(uuid())
  name String
  creator User @relation(fields: [creatorId], references: [id])
  creatorId String
  
  status EventStatus

  hosts User[] @relation("hostEvents")
  participators User[] @relation("participateEvents")

  invites Invites[]

  slots Slot[]

  participatorNum Int @default(0)
  coverImgUrl String @default("")

  bookingStartAt DateTime @default(now())
  bookingEndAt DateTime @default(now())
  autoStartEndBooking Boolean @default(false)
  
  
}

enum SlotStatus {
  
  AVAILABLE
  FULL
  CANCELLED
}

model Slot {
  id String @id @default(uuid())
  availableParticipatorNum Int @default(0)

  host User @relation(fields: [hostId], references: [id])
  hostId String

  participators User[] @relation("participateSlots")

  event Event @relation(fields: [eventId], references: [id])
  eventId String

  startDate DateTime
  endDate DateTime

  booking Boolean @default(false)



  status SlotStatus


}